extends layout

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1= title
    .w3-container
      table.w3-table-all
        thead
          tr
            th Id
            th Name
            th GitLink
            th Actions
        tbody
          each aluno in lista
            tr
              td
                a(href='/alunos/' + aluno.id)= aluno.id
              td= aluno.nome
              td
                a(href=aluno.gitlink)= aluno.gitlink
              td
                a.w3-button.w3-blue(href='/alunos/edit/' + aluno.id) Editar
                a.w3-button.w3-red(href='/alunos/delete/' + aluno.id) Apagar
    footer.w3-container.w3-pink
      address Gerado por EngWeb2024
