extends layout

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1= title
    .w3-container
      form.w3-container(method="POST")
        fieldset
          legend Metadados
          label Id
          input.w3-input(type="text" name="id")
          label Nome
          input.w3-input(type="text" name="nome")
          label GitLink
          input.w3-input(type="text" name="gitlink")
        fieldset
          legend TPC
          each n in [1,2,3,4,5,6,7,8]
            label TPC#{n} 
            input.w3-check.w3-margin-right(type="checkbox" name="tpc" + n value="1")
        button.w3-button.w3-purple.w3-mb-2(type="submit") Registar

    footer.w3-container.w3-pink
      address Gerado por EngWeb2024
