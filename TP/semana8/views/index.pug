extends layout

block content
  .modal(id='display')
  .w3-card-4
    header.w3-indigo
      h1 File upload
    form.w3-container(action='/files', method='post', enctype='multipart/form-data')
      label.w3-text-teal
        b Select file
      input.w3-input.w3-border.w3-light-grey(type='file', name='my_file')
      label.w3-text-teal
        b Description
      input.w3-input.w3-border.w3-light-grey(type='text', name='desc')
      button.w3-button.w3-indigo(type='submit') Upload
  .w3-container
    header.w3-indigo
      h1 File list
    .w3-container
      table.w3-table-all
        thead
          tr
            th Date
            th File
            th Size
            th Type
        tbody
          each f in files
            tr(onclick=`showImage(\"${f.name}\", \"${f.type}\")`)
              td= f.date
              td= f.name
              td= f.size
              td= f.type
    footer.w3-container.w3-indigo
      address Generated by upload-single::EngWeb2024 em #{d}
